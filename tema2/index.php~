<?php
$i = 12;
for ($j = 0; $j < 46; $j = $j + 15) {
    print "Son las $i AM y $j minutos.";
    print "<br>";
}


for ($i = 1; $i < 12; $i++) {
    for ($j = 0; $j < 46; $j = $j + 15) {
        print "Son las $i AM y $j minutos.";
	print "<br>";
    }
}

for ($j = 0; $j < 46; $j = $j + 15) {
    print "Son las $i PM y $j minutos.";
    print "<br>";
}

for ($i = 1; $i < 12; $i++) {
    for ($j = 0; $j < 46; $j = $j + 15) {
        print "Son las $i PM y $j minutos.";
	print "<br>";
    }
}

?>
